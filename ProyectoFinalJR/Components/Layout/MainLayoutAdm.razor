@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager
@inherits LayoutComponentBase
@implements IDisposable

@attribute [Authorize(Roles = "Admin, Usuario")]

<div class="d-flex admin-page-wrapper" style="height: 100vh;">

    <div class="admin-sidebar bg-Azul-Marino text-light" style="width: 250px; min-width: 250px; overflow-y: auto;">

        <div class="sidebar-header text-center py-4 border-bottom border-secondary">
            <img src="Images/logo.jpg" alt="Logo" class="logo-sidebar mb-2" />
            <h4 class="fw-bold mb-0" style="color: #FFD700 !important;">Tu sueño casa de novia</h4>
        </div>

        <div class="sidebar-content p-3">

            <div class="nav-section mb-3">
                <div class="text-uppercase text-secondary small fw-bold mb-2">General</div>
                <NavLink class="nav-link text-light" href="/admin/dashboard" Match="NavLinkMatch.All">
                    <span class="bi bi-speedometer2 me-2"></span> Dashboard
                </NavLink>
            </div>

            <div class="nav-section mb-3">
                <div class="text-uppercase text-secondary small fw-bold mb-2">Gestión</div>

                <AuthorizeView Roles="Admin">
                    <div class="sub-nav-section mb-2">
                        <div class="text-secondary small fw-bold mb-1 mt-2">Admin Global</div>

                        <NavLink class="nav-link text-light" href="/admin/evento">
                            <span class="bi bi-list-task me-2"></span> Listado Eventos
                        </NavLink>
                        <NavLink class="nav-link text-light" href="/admin/citas">
                            <span class="bi bi-calendar-day me-2"></span> Listado Citas
                        </NavLink>
                        <NavLink class="nav-link text-light" href="/admin/pagos">
                            <span class="bi bi-cash-stack me-2"></span> Listado Pagos
                        </NavLink>
                        <NavLink class="nav-link text-light" href="/admin/sugerencias">
                            <span class="bi bi-lightbulb-fill me-2"></span> Bandeja Sugerencias
                        </NavLink>

                        <div class="text-secondary small fw-bold mb-1 mt-2">Catálogos</div>
                        <NavLink class="nav-link text-light" href="/admin/proveedores">
                            <span class="bi bi-truck me-2"></span> Tipos Proveedores
                        </NavLink>
                        <NavLink class="nav-link text-light" href="/admin/eventos">
                            <span class="bi bi-card-checklist me-2"></span> Tipos Eventos
                        </NavLink>
                    </div>
                </AuthorizeView>

                <AuthorizeView Roles="Usuario">
                    <div class="sub-nav-section mb-2">
                        <div class="text-secondary small fw-bold mb-1 mt-2">Mi Cuenta</div>

                        <NavLink class="nav-link text-light" href="/eventos">
                            <span class="bi bi-calendar-plus me-2"></span> Agendar Evento
                        </NavLink>

                        <NavLink class="nav-link text-light" href="/pagos">
                            <span class="bi bi-currency-dollar me-2"></span> Realizar Pago
                        </NavLink>

                        <NavLink class="nav-link text-light" href="/sugerencias">
                            <span class="bi bi-chat-left-dots me-2"></span> Enviar Sugerencia
                        </NavLink>
                    </div>
                </AuthorizeView>

            </div>

            <div class="nav-item px-3">
                <form action="Account/Logout" method="post">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                    <button type="submit" class="nav-link text-danger">
                        <span class="bi bi-box-arrow-right"></span> Cerrar Sesión
                    </button>
                </form>
            </div>
        </div>
    </div>

    <main class="content flex-grow-1 overflow-auto bg-light p-4">
        @Body
    </main>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}