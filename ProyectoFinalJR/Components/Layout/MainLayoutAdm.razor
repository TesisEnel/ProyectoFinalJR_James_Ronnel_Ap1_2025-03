@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager
@inherits LayoutComponentBase
@implements IDisposable

@attribute [Authorize(Roles = "Admin")]

<div class="d-flex admin-page-wrapper" style="height: 100vh;">

    <div class="admin-sidebar bg-dark text-light" style="width: 250px; min-width: 250px; overflow-y: auto;">

        <div class="sidebar-header text-center py-4 border-bottom border-secondary">
            <h4 class="fw-bold text-warning mb-0">Panel Admin</h4>
            <small class="text-light">Gestión Total</small>
        </div>

        <div class="sidebar-content p-3">

            <div class="nav-section mb-3">
                <div class="text-uppercase text-secondary small fw-bold mb-2">General</div>
                <NavLink class="nav-link text-light" href="/admin/dashboard" Match="NavLinkMatch.All">
                    <span class="bi bi-speedometer2 me-2"></span> Dashboard
                </NavLink>
            </div>

            <div class="nav-section mb-3">
                <div class="text-uppercase text-secondary small fw-bold mb-2">Gestión</div>

                <NavLink class="nav-link text-light" href="/admin/eventos">
                    <span class="bi bi-calendar-check me-2"></span> Eventos
                </NavLink>

                <NavLink class="nav-link text-light" href="/admin/proveedores">
                    <span class="bi bi-truck me-2"></span> Proveedores
                </NavLink>

                <NavLink class="nav-link text-light" href="/admin/sugerencias">
                    <span class="bi bi-chat-left-dots me-2"></span> Sugerencias
                </NavLink>

            </div>

            <div class="nav-item px-3">
                <form action="Account/Logout" method="post">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                    <button type="submit" class="nav-link text-danger">
                        <span class="bi bi-box-arrow-right"></span> Cerrar Sesión
                    </button>
                </form>
            </div>
        </div>
    </div>

    <main class="content flex-grow-1 overflow-auto bg-light p-4">
        @Body
    </main>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}