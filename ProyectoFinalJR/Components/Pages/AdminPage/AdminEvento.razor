@page "/admin/evento"
@layout MainLayoutAdm
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Admin")]

@using Microsoft.AspNetCore.Authorization
@using ProyectoFinalJR.Models
@using ProyectoFinalJR.Services
@inject EventoDetalleService EventoService
@inject NavigationManager navigationManager

<PageTitle>Gestión de Eventos</PageTitle>

<div class="container-fluid">
    <div class="card shadow-lg">
        <div class="card-header d-flex justify-content-between align-items-center text-white" style="background-color: #01206E !important;">
            <h4 class="card-title m-0">Gestión de Eventos Agendados</h4>
            <a href="/Eventos/Crear" class="btn btn-gold create-button">
                <span class="bi bi-calendar-plus me-1"></span>
            </a>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-12 col-md-4">
                    <label class="form-label"><strong>Buscar (Nombre, Lugar, o Tipo de Proveedor)</strong></label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Escriba aquí para buscar" />
                        <button type="button" class="btn btn-primary bi bi-search" @onclick="Buscar"></button>
                        <button type="button"
                                class="btn btn-secondary bi bi-arrow-clockwise"
                                @onclick="Restablecer">
                        </button>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-12 col-md-3">
                    <label class="form-label"><strong>Fecha Desde</strong></label>
                    <InputDate @bind-Value="FechaInicioFiltro" class="form-control" @onchange="Buscar" />
                </div>
                <div class="col-12 col-md-3">
                    <label class="form-label"><strong>Fecha Hasta</strong></label>
                    <InputDate @bind-Value="FechaFinFiltro" class="form-control" @onchange="Buscar" />
                </div>
            </div>

            <div class="table-responsive">
                @if (ListaEventos == null)
                {
                    <p><em>Cargando Eventos...</em></p>
                }
                else if (!ListaEventos.Any())
                {
                    <div class="alert alert-info">No se encontraron Eventos.</div>
                }
                else
                {
                    <table class="table table-hover table-bordered mt-3 align-middle">
                        <thead class="table-white">
                            <tr>
                                <th>ID</th>
                                <th>Nombre del Evento</th>
                                <th>Tipo Evento</th>
                                <th>Tipo Proveedor</th>
                                <th>Fecha</th>
                                <th>Lugar</th>
                                <th>Presupuesto</th>
                                <th>Estado</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var evento in ListaEventos)
                            {
                                <tr>
                                    <td class="text-center">@evento.EventoId</td>
                                    <td>@evento.Nombre</td>
                                    <td>@evento.TipoEvento?.Nombre</td>
                                    <td>@evento.TipoProveedor?.Nombre</td>
                                    <td>@evento.Fecha.ToString("dd-MMM-yyyy")</td>
                                    <td>@evento.Lugar</td>
                                    <td>@evento.PresupuestoInicial.ToString("C")</td>
                                    <td>@evento.Estado</td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">

                                            <a href="/admin/eventos/detalle/@evento.EventoId"
                                               class="btn btn-outline-info btn-sm bi bi-eye"
                                               title="Ver Detalle">
                                            </a>

                                            <a href="/admin/eventos/editar/@evento.EventoId" class="btn btn-outline-primary btn-sm bi bi-pencil-square" title="Editar"></a>
                                            <button @onclick="() => AbrirModalEliminar(evento)"
                                                    class="btn btn-outline-danger btn-sm bi bi-trash"
                                                    title="Eliminar">
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <label><strong>Total Eventos:</strong> @(ListaEventos?.Count ?? 0)</label>
        </div>
    </div>
</div>

<div class="modal @ModalClass" tabindex="-1" style="display:@ModalDisplay;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirmar Eliminación de Evento</h5>
                <button type="button" class="btn-close" @onclick="CerrarModal"></button>
            </div>
            <div class="modal-body">
                @if (EventoAEliminar != null)
                {
                    <p>¿Estás seguro de que deseas eliminar el siguiente evento?</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><strong>ID:</strong> @EventoAEliminar.EventoId</li>
                        <li class="list-group-item"><strong>Nombre:</strong> @EventoAEliminar.Nombre</li>
                        <li class="list-group-item"><strong>Tipo:</strong> @EventoAEliminar.TipoEvento?.Nombre</li>
                        <li class="list-group-item"><strong>Fecha:</strong> @EventoAEliminar.Fecha.ToString("dd-MMM-yyyy")</li>
                        <li class="list-group-item"><strong>Lugar:</strong> @EventoAEliminar.Lugar</li>
                    </ul>
                    <p class="text-danger">Esta acción no se puede deshacer.</p>
                }
                else
                {
                    <p>Evento no encontrado.</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar">
                    <span class="bi bi-trash me-1"></span> Eliminar Evento
                </button>
            </div>
        </div>
    </div>
</div>

@if (ModalIsVisible)
{
    <div class="modal-backdrop fade show"></div>
}

@code {
    public List<EventoDetalle> ListaEventos { get; set; } = new();
    public string ValorFiltro { get; set; } = string.Empty;
    public DateOnly? FechaInicioFiltro { get; set; }
    public DateOnly? FechaFinFiltro { get; set; }

    private EventoDetalle? EventoAEliminar { get; set; }
    private bool ModalIsVisible { get; set; } = false;
    private string ModalDisplay => ModalIsVisible ? "block" : "none";
    private string ModalClass => ModalIsVisible ? "show" : "";

    private void AbrirModalEliminar(EventoDetalle evento)
    {
        EventoAEliminar = evento;
        ModalIsVisible = true;
        StateHasChanged();
    }

    private void CerrarModal()
    {
        EventoAEliminar = null;
        ModalIsVisible = false;
        StateHasChanged();
    }

    private async Task ConfirmarEliminar()
    {
        if (EventoAEliminar == null)
        {
            CerrarModal();
            return;
        }

        int id = EventoAEliminar.EventoId;
        CerrarModal();

        if (await EventoService.Eliminar(id))
        {
            await CargarLista();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await CargarLista();
    }

    private async Task CargarLista()
    {
        ListaEventos = await EventoService.GetList(e => true);
    }

    private async Task Buscar()
    {
        var filtroTexto = ValorFiltro?.ToLower() ?? string.Empty;
        var inicio = FechaInicioFiltro;
        var fin = FechaFinFiltro;

        ListaEventos = await EventoService.GetList(
            e => (string.IsNullOrWhiteSpace(filtroTexto) ||
                  e.Nombre.ToLower().Contains(filtroTexto) ||
                  e.Lugar.ToLower().Contains(filtroTexto) ||
                  (e.Descripcion != null && e.Descripcion.ToLower().Contains(filtroTexto)) ||
                  (e.TipoProveedor != null && e.TipoProveedor.Nombre.ToLower().Contains(filtroTexto)))
                 &&
                 (inicio == null || e.Fecha >= inicio)
                 &&
                 (fin == null || e.Fecha <= fin)
        );
    }

    private async Task Restablecer()
    {
        ValorFiltro = string.Empty;
        FechaInicioFiltro = null;
        FechaFinFiltro = null;
        await CargarLista();
    }
}