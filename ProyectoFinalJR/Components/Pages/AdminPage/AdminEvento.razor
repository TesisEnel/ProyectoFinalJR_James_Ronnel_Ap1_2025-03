@page "/admin/evento"
@layout MainLayoutAdm
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Admin")]

@using Microsoft.AspNetCore.Authorization
@using ProyectoFinalJR.Models
@using ProyectoFinalJR.Services
@inject EventoService EventoService
@inject NavigationManager navigationManager

<PageTitle>Gestión de Eventos</PageTitle>

<div class="container-fluid">
    <div class="card shadow-lg">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
            <h4 class="card-title m-0">Gestión de Eventos Agendados</h4>
            <a href="/Eventos/Crear" class="btn btn-warning create-button">
                <span class="bi bi-plus-circle me-1"></span> Agendar Nuevo Evento
            </a>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-12 col-md-4">
                    <label class="form-label"><strong>Buscar (Nombre, Lugar, o Tipo de Proveedor)</strong></label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Escriba aquí para buscar" />
                        <button type="button" class="btn btn-primary bi bi-search" @onclick="Buscar"></button>
                        <button type="button"
                                class="btn btn-secondary bi bi-arrow-clockwise"
                                @onclick="Restablecer">
                        </button>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                @if (ListaEventos == null)
                {
                    <p><em>Cargando Eventos...</em></p>
                }
                else if (!ListaEventos.Any())
                {
                    <div class="alert alert-info">No se encontraron Eventos.</div>
                }
                else
                {
                    <table class="table table-hover table-bordered mt-3 align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Nombre del Evento</th>
                                <th>Tipo Evento</th>
                                <th>Tipo Proveedor</th> @* <-- Nueva columna *@
                                <th>Fecha</th>
                                <th>Lugar</th>
                                <th>Presupuesto</th>
                                <th>Estado</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var evento in ListaEventos)
                            {
                                <tr>
                                    <td class="text-center">@evento.EventoId</td>
                                    <td>@evento.Nombre</td>
                                    <td>@evento.TipoEvento?.Nombre</td>
                                    <td>@evento.TipoProveedor?.Nombre</td> @* <-- Mostrar TipoProveedor *@
                                    <td>@evento.Fecha.ToString("dd-MMM-yyyy")</td>
                                    <td>@evento.Lugar</td>
                                    <td>@evento.PresupuestoInicial.ToString("C")</td>
                                    <td>@evento.Estado</td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a href="/admin/eventos/editar/@evento.EventoId" class="btn btn-outline-primary btn-sm bi bi-pencil-square" title="Editar"></a>
                                            <button @onclick="() => EliminarEvento(evento.EventoId)" class="btn btn-outline-danger btn-sm bi bi-trash" title="Eliminar"></button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <label><strong>Total Eventos:</strong> @(ListaEventos?.Count ?? 0)</label>
        </div>
    </div>
</div>

@code {
    public List<Evento> ListaEventos { get; set; } = new();
    public string ValorFiltro { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await CargarLista();
    }

    private async Task CargarLista()
    {
        // El servicio ya incluye TipoEvento y TipoProveedor
        ListaEventos = await EventoService.GetList(e => true);
    }

    private async Task Buscar()
    {
        if (string.IsNullOrWhiteSpace(ValorFiltro))
        {
            await CargarLista();
            return;
        }

        var filtro = ValorFiltro.ToLower();

        // Buscar por Nombre, Lugar, Descripción O Tipo de Proveedor
        ListaEventos = await EventoService.GetList(
            e => e.Nombre.ToLower().Contains(filtro) ||
                 e.Lugar.ToLower().Contains(filtro) ||
                 (e.Descripcion != null && e.Descripcion.ToLower().Contains(filtro)) ||
                 (e.TipoProveedor != null && e.TipoProveedor.Nombre.ToLower().Contains(filtro)) // <-- Lógica añadida
        );
    }

    private async Task Restablecer()
    {
        ValorFiltro = string.Empty;
        await CargarLista();
    }

    private async Task EliminarEvento(int eventoId)
    {
        if (await EventoService.Eliminar(eventoId))
        {
            await CargarLista();
        }
        else
        {
            // Manejar error de eliminación
        }
    }
}