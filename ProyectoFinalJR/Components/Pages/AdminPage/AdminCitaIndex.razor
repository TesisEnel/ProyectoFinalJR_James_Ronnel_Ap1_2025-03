@page "/admin/citas"
@layout MainLayoutAdm
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Admin")]

@using Microsoft.AspNetCore.Authorization
@using ProyectoFinalJR.Models
@using ProyectoFinalJR.Services
@inject CitaService CitaService
@inject NavigationManager navigationManager

<PageTitle>Gestión de Citas y Reservas</PageTitle>

<div class="container-fluid">
    <div class="card shadow-lg">
        <div class="card-header d-flex justify-content-between align-items-center text-white" style="background-color: #01206E !important;">
            <h4 class="card-title m-0">Gestión de Citas Agendadas</h4>
            <a href="/admin/citas/crear" class="btn btn-gold create-button">
                <span class="bi bi-calendar-plus me-1"></span> 
            </a>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-12 col-md-4">
                    <label class="form-label"><strong>Buscar (Evento o Proveedor)</strong></label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Escriba aquí para buscar" />
                        <button type="button" class="btn btn-primary bi bi-search" @onclick="Buscar"></button>
                        <button type="button"
                                class="btn btn-secondary bi bi-arrow-clockwise"
                                @onclick="Restablecer">
                        </button>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                @if (ListaCitas == null)
                {
                    <p><em>Cargando Citas...</em></p>
                }
                else if (!ListaCitas.Any())
                {
                    <div class="alert alert-info">No se encontraron Citas.</div>
                }
                else
                {
                    <table class="table table-hover table-bordered mt-3 align-middle">
                        <thead class="table-White">
                            <tr>
                                <th>ID Cita</th>
                                <th>Fecha y Hora</th>
                                <th>Evento Asociado</th>
                                <th>Proveedor</th>
                                <th>Usuario ID</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cita in ListaCitas)
                            {
                                <tr>
                                    <td class="text-center">@cita.CitaId</td>
                                    <td>@cita.FechaCita.ToString("dd-MMM-yyyy") @cita.HoraCita</td>
                                    <td>@cita.Evento?.Nombre</td>
                                    <td>@(cita.Proveedor?.Nombre ?? "Tienda/General")</td>
                                    <td>@(cita.UsuarioId.Length > 10 ? cita.UsuarioId.Substring(0, 10) + "..." : cita.UsuarioId)</td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a href="/admin/citas/editar/@cita.CitaId" class="btn btn-outline-primary btn-sm bi bi-pencil-square" title="Editar"></a>
                                            <button @onclick="() => AbrirModalEliminar(cita)"
                                                    class="btn btn-outline-danger btn-sm bi bi-trash"
                                                    title="Eliminar">
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <label><strong>Total Citas:</strong> @(ListaCitas?.Count ?? 0)</label>
        </div>
    </div>
</div>

<div class="modal @ModalClass" tabindex="-1" style="display:@ModalDisplay;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirmar Eliminación de Cita</h5>
                <button type="button" class="btn-close" @onclick="CerrarModal"></button>
            </div>
            <div class="modal-body">
                @if (CitaAEliminar != null)
                {
                    <p>¿Estás seguro de que deseas eliminar la siguiente cita?</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><strong>ID:</strong> @CitaAEliminar.CitaId</li>
                        <li class="list-group-item"><strong>Evento:</strong> @CitaAEliminar.Evento?.Nombre</li>
                        <li class="list-group-item"><strong>Fecha/Hora:</strong> @CitaAEliminar.FechaCita.ToString("dd-MMM-yyyy") @CitaAEliminar.HoraCita</li>
                        <li class="list-group-item"><strong>Proveedor:</strong> @(CitaAEliminar.Proveedor?.Nombre ?? "N/A")</li>
                    </ul>
                    <p class="text-danger">Esta acción no se puede deshacer.</p>
                }
                else
                {
                    <p>Cita no encontrada.</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar">
                    <span class="bi bi-trash me-1"></span> Eliminar Cita
                </button>
            </div>
        </div>
    </div>
</div>

@if (ModalIsVisible)
{
    <div class="modal-backdrop fade show"></div>
}

@code {
    public List<Cita> ListaCitas { get; set; } = new();
    public string ValorFiltro { get; set; } = string.Empty;

    private Cita? CitaAEliminar { get; set; }
    private bool ModalIsVisible { get; set; } = false;
    private string ModalDisplay => ModalIsVisible ? "block" : "none";
    private string ModalClass => ModalIsVisible ? "show" : "";

    private void AbrirModalEliminar(Cita cita)
    {
        CitaAEliminar = cita;
        ModalIsVisible = true;
        StateHasChanged();
    }

    private void CerrarModal()
    {
        CitaAEliminar = null;
        ModalIsVisible = false;
        StateHasChanged();
    }

    private async Task ConfirmarEliminar()
    {
        if (CitaAEliminar == null)
        {
            CerrarModal();
            return;
        }

        int id = CitaAEliminar.CitaId;
        CerrarModal();

        if (await CitaService.Eliminar(id))
        {
            await CargarLista();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await CargarLista();
    }

    private async Task CargarLista()
    {
        ListaCitas = await CitaService.GetList(c => true);
    }

    private async Task Buscar()
    {
        if (string.IsNullOrWhiteSpace(ValorFiltro))
        {
            await CargarLista();
            return;
        }

        var filtro = ValorFiltro.ToLower();

        ListaCitas = await CitaService.GetList(
            c => (c.Evento != null && c.Evento.Nombre.ToLower().Contains(filtro)) ||
                 (c.Proveedor != null && c.Proveedor.Nombre.ToLower().Contains(filtro))
        );
    }

    private async Task Restablecer()
    {
        ValorFiltro = string.Empty;
        await CargarLista();
    }
}