@page "/admin/pagos"
@layout MainLayoutAdm
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Admin")]

@using Microsoft.AspNetCore.Authorization
@using ProyectoFinalJR.Models
@using ProyectoFinalJR.Services
@inject PagosDetalleService PagosDetalleService
@inject NavigationManager navigationManager

<PageTitle>Gestión de Pagos y Transacciones</PageTitle>

<div class="container-fluid">
    <div class="card shadow-lg">
        <div class="card-header d-flex justify-content-between align-items-center text-white" style="background-color: #01206E !important;">
            <h4 class="card-title m-0">Registro de Transacciones de Pago</h4>
            <a href="/admin/pagos/crear" class="btn btn-gold create-button">
                <span class="bi bi-calendar-plus me-1"></span>
            </a>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-12 col-md-4">
                    <label class="form-label"><strong>Buscar (Método o Evento)</strong></label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Escriba aquí para buscar" />
                        <button type="button" class="btn btn-primary bi bi-search" @onclick="Buscar"></button>
                        <button type="button"
                                class="btn btn-secondary bi bi-arrow-clockwise"
                                @onclick="Restablecer">
                        </button>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                @if (ListaPagos == null)
                {
                    <p><em>Cargando Registros de Pago...</em></p>
                }
                else if (!ListaPagos.Any())
                {
                    <div class="alert alert-info">No se encontraron Pagos.</div>
                }
                else
                {
                    <table class="table table-hover table-bordered mt-3 align-middle">
                        <thead class="table-White">
                            <tr>
                                <th>ID Pago</th>
                                <th>Evento</th>
                                <th>Monto</th>
                                <th>Fecha Pago</th>
                                <th>Método</th>
                                <th>Estado</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pago in ListaPagos)
                            {
                                <tr>
                                    <td class="text-center">@pago.PagoId</td>
                                    <td>@pago.Evento?.Nombre</td>
                                    <td>@pago.MontoPagado.ToString("C")</td>
                                    <td>@pago.FechaPago.ToString("dd-MMM-yyyy hh:mm tt")</td>
                                    <td>@pago.Metodo</td>
                                    <td>@pago.Estado</td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a href="/admin/pagos/editar/@pago.PagoId" class="btn btn-outline-primary btn-sm bi bi-pencil-square" title="Editar"></a>
                                            <button @onclick="() => AbrirModalEliminar(pago)"
                                                    class="btn btn-outline-danger btn-sm bi bi-trash"
                                                    title="Eliminar">
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <label><strong>Total Pagos:</strong> @(ListaPagos?.Count ?? 0)</label>
        </div>
    </div>
</div>

<div class="modal @ModalClass" tabindex="-1" style="display:@ModalDisplay;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirmar Eliminación de Pago</h5>
                <button type="button" class="btn-close" @onclick="CerrarModal"></button>
            </div>
            <div class="modal-body">
                @if (PagoAEliminar != null)
                {
                    <p>¿Estás seguro de que deseas eliminar este registro de pago?</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><strong>ID de Pago:</strong> @PagoAEliminar.PagoId</li>
                        <li class="list-group-item"><strong>Evento:</strong> @PagoAEliminar.Evento?.Nombre</li>
                        <li class="list-group-item"><strong>Monto:</strong> @PagoAEliminar.MontoPagado.ToString("C")</li>
                        <li class="list-group-item"><strong>Método:</strong> @PagoAEliminar.Metodo</li>
                        <li class="list-group-item"><strong>Estado:</strong> @PagoAEliminar.Estado</li>
                    </ul>
                    <p class="text-danger">Esta acción no se puede deshacer.</p>
                }
                else
                {
                    <p>Registro de pago no encontrado.</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminar">
                    <span class="bi bi-trash me-1"></span> Eliminar Pago
                </button>
            </div>
        </div>
    </div>
</div>

@if (ModalIsVisible)
{
    <div class="modal-backdrop fade show"></div>
}

@code {
    public List<PagosDetalle> ListaPagos { get; set; } = new();
    public string ValorFiltro { get; set; } = string.Empty;

    private PagosDetalle? PagoAEliminar { get; set; }
    private bool ModalIsVisible { get; set; } = false;
    private string ModalDisplay => ModalIsVisible ? "block" : "none";
    private string ModalClass => ModalIsVisible ? "show" : "";

    private void AbrirModalEliminar(PagosDetalle pago)
    {
        PagoAEliminar = pago;
        ModalIsVisible = true;
        StateHasChanged();
    }

    private void CerrarModal()
    {
        PagoAEliminar = null;
        ModalIsVisible = false;
        StateHasChanged();
    }

    private async Task ConfirmarEliminar()
    {
        if (PagoAEliminar == null)
        {
            CerrarModal();
            return;
        }

        int id = PagoAEliminar.PagoId;
        CerrarModal();

        if (await PagosDetalleService.Eliminar(id))
        {
            await CargarLista();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await CargarLista();
    }

    private async Task CargarLista()
    {
        ListaPagos = await PagosDetalleService.GetList(p => true);
    }

    private async Task Buscar()
    {
        if (string.IsNullOrWhiteSpace(ValorFiltro))
        {
            await CargarLista();
            return;
        }

        var filtro = ValorFiltro.ToLower();

        ListaPagos = await PagosDetalleService.GetList(
            p => p.Metodo.ToLower().Contains(filtro) ||
                 p.Estado.ToLower().Contains(filtro) ||
                 (p.Evento != null && p.Evento.Nombre.ToLower().Contains(filtro))
        );
    }

    private async Task Restablecer()
    {
        ValorFiltro = string.Empty;
        await CargarLista();
    }
}